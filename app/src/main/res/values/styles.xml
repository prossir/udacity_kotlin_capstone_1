<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextView style -->
    <style name="title_style">
        <item name="android:layout_margin">@dimen/d_2_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/t_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/t_header_size</item>
    </style>

    <!-- Button style -->
    <style name="button_positive_style">
        <item name="android:background">@drawable/rounded_primary_background</item>
        <item name="android:elevation">@dimen/e_default</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/p_2_padding</item>
        <item name="android:paddingBottom">@dimen/p_2_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_negative_style">
        <item name="android:background">@drawable/rounded_complementary_background</item>
        <item name="android:elevation">@dimen/e_default</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/p_2_padding</item>
        <item name="android:paddingBottom">@dimen/p_2_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>